    <build>
        <plugins>
            <plugin>
                <groupId>org.xolstice.maven.plugins</groupId>
                <artifactId>protobuf-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <goals>
                            <goal>compile</goal>
                            <goal>compile-custom</goal>
                        </goals>
                        <configuration>
                            <pluginParameter>enable_deprecated=true</pluginParameter>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>3.1.1</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <filters>
                                <filter>
                                    <artifact>*:*</artifact>
                                    <excludes>
                                        <exclude>META-INF/*.SF</exclude>
                                        <exclude>META-INF/*.DSA</exclude>
                                        <exclude>META-INF/*.RSA</exclude>
                                    </excludes>
                                </filter>
                            </filters>
                            <relocations>
                                <relocation>
                                    <pattern>com.</pattern>
                                    <!-- 请您注意 shade路径是独一无二的 该路径不能重复和被模仿  -->
                                    <!-- 请您注意 shade之后的命名规则需要符合自己填写的 最左前缀规则！！！ -->
                                    <shadedPattern>com.kuaishou.video.bigdata.udf.com.</shadedPattern>
                                    <!-- 请您注意 不要重复shade自己 将自己的路径排除 每一级都要指定  -->
                                    <!-- 请您注意 如果有新建层级的包 需要多指定一层 此处为了兼容层级 进行了冗余 -->
                                    <excludes>
                                        <exclude>com.kuaishou.data.udf.**</exclude>
<!--                                        <exclude>com.kuaishou.cdn.**</exclude>-->
                                    </excludes>
                                </relocation>
                                <relocation>
                                    <!-- 例： 将org.下进行全量shade -->
                                    <pattern>org.</pattern>
                                    <!-- 请您注意 shade路径是独一无二的 该路径不能重复和被模仿 -->
                                    <!-- 请您注意 shade之后的命名规则需要符合自己填写的 最左前缀规则！！！ -->
                                    <shadedPattern>com.kuaishou.video.bigdata.udf.org.</shadedPattern>
                                    <excludes>
                                        <!-- 请您注意 将hadoop和hive依赖排除，因为hive包是provided的，不能将hive包shade -->
                                        <exclude>org.apache.hadoop.**</exclude>
                                        <exclude>org.slf4j.**</exclude>
                                        <exclude>org.apache.commons.io.**</exclude>
                                    </excludes>
                                </relocation>
                            </relocations>

                        </configuration>
                    </execution>
                </executions>
            </plugin>

        </plugins>
